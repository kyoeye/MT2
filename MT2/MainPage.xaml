<Page
    x:Class="MT2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MT2.pubuliu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#FF0074B6"
    mc:Ignorable="d">

    <Grid Background="#FFE4E4E4">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>




        <!--  汉堡菜单  -->
        <SplitView
            x:Name="Mymenu"
            Grid.RowSpan="2"
            OpenPaneLength="300"
          
            >
            <SplitView.Pane>
                <Grid Background="#FF0074B6">
                    <Grid.ChildrenTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition FromHorizontalOffset="-200"/>
                        </TransitionCollection>
                    </Grid.ChildrenTransitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <ListBox Grid.Row="0" Background="#FF2385BD">
                        <ListBoxItem Height="200">
                            <ListBoxItem.Background>
                                <ImageBrush x:Name="ListBoximg" />
                            </ListBoxItem.Background>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    Text="&#xE10F;" />
                                <TextBlock
                                    Margin="5,0,5,0"
                                    Foreground="White"
                                    FontSize="18"
                                    Text="首页" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    Text="&#xE15F;" />
                                <TextBlock
                                    Margin="5,0,5,0"
                                    Foreground="White"
                                    FontSize="18"
                                    Text="评论" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    Text="&#xE734;" />
                                <TextBlock
                                    Margin="5,0,5,0"
                                    Foreground="White"
                                    FontSize="18"
                                    Text="收藏" />
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>

                    <Grid Grid.Row="1" Height="50">
                        <Grid.ChildrenTransitions>
                            <TransitionCollection>
                                <EntranceThemeTransition FromVerticalOffset="100"/>
                            </TransitionCollection>
                        </Grid.ChildrenTransitions>
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <AppBarButton Width="50">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="20"
                                    Text="&#xE2AF;" />
                            </AppBarButton>
                            <AppBarButton
                                Name="SettingButton"
                                Width="50"
                                Click="SettingButton_Click">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="20"
                                    Text="&#xE713;" />
                            </AppBarButton>
                        </StackPanel>
                        <AppBarButton Width="50">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="20"
                                Text="&#xE76E;" />
                        </AppBarButton>
                    </Grid>

                </Grid>
            </SplitView.Pane>
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
            Name="NoNetworld"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="#FFB9B9B9"
            Visibility="Collapsed"
            Text="没网了233333333" />

                <Grid Grid.Row="1">
                    <GridView   SelectionMode="Single"  x:Name="Mygridview">
                      
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                
                                <local:WaterfallPanel x:Name ="waterfallpanel"  ColumnNum="2" />
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.Template>
                            <ControlTemplate>
                                <ScrollViewer>
                                    <StackPanel>
                                        <ItemsPresenter />
                                        <Button
                                    Name="Loadingbutton"
                                    Margin="12"
                                    HorizontalAlignment="Center"
                                    Click="Loadingbutton_Click"
                                    Content="加载更多(｡･∀･)ﾉﾞ(有逻辑错误）" />
                                    </StackPanel>
                                </ScrollViewer>
                            </ControlTemplate>
                        </GridView.Template>
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                
                                <Grid Margin="3">
                                    <Grid.ChildrenTransitions>
                                        <TransitionCollection>
                                            <EntranceThemeTransition FromHorizontalOffset="200"/>
                                        </TransitionCollection>
                                    </Grid.ChildrenTransitions>
                                    <Border CornerRadius="0,0,3,3" Padding="2" Background="White" />

                                    <StackPanel Tapped="gridstackpanel_Tapped"  Margin="1" Name="gridstackpanel">
                                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Image
                                        Name="Gridimage"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="{Binding preview_url}" />
                                        </Grid>
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                                            <!--<Rectangle
                                            Width="{Binding ElementName=gridstackpanel, Path=Width, Mode=TwoWay}"
                                            Height="{Binding ElementName=gridstackpanel, Path=Height, Mode=TwoWay}"
                                            Fill="White"
                                            Opacity="0.3" />-->
                                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom">
                                                <TextBlock
                                            Name="Imagetext"
                                            Margin="2,0,0,0"
                                            Foreground="Black"
                                            Text="{Binding name}"  
                                            TextWrapping="Wrap" />
                                                <TextBlock
                                            Name="imageurl"
                                            Margin="2,1,1,0"
                                            Text="{Binding id}" Foreground="#FFDEDEDE" />
                                            </StackPanel>
                                        </Grid>

                                    </StackPanel>



                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>

                <Grid Grid.Row="0">
                    <Rectangle Height="50" Fill="#FF0074B6" />
                    <ProgressBar Name="Networdprogress" Height="50" Value="50" />
                    <AppBarButton
                Name="MenuButton"
                Width="50"
                Height="50"
                Click="MenuButton_Click">
                        <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="White"
                    FontFamily="Segoe MDL2 Assets"
                    Text="&#xE76C;" />
                    </AppBarButton>
                    <TextBlock
                Name="Mytop"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="White">
                <Run Text="萌豚" />
                <Run
                    Foreground="White"
                    FontWeight="Bold"
                    Text="S" />
                    </TextBlock>
                    <AppBarButton
                Name="SeachButton"
                Width="50"
                Height="50"
                Click="SeachButton_Click"
                HorizontalAlignment="Right">
                        <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="White"
                    FontFamily="Segoe MDL2 Assets"
                    Text="&#xE11A;" />
                    </AppBarButton>

                </Grid>


            </Grid>
        </SplitView>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="NarrowLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Mymenu.DisplayMode" Value="Overlay" />
                        <Setter Target="Mytop.HorizontalAlignment" Value="Center" />
                        <Setter Target="waterfallpanel.ColumnNum" Value="2" />
                        <!--<Setter Target="SeachButton.Visibility" Value="Visible" />-->
                    </VisualState.Setters>
                </VisualState>
                <VisualState >
                    <VisualState.StateTriggers >
                        <AdaptiveTrigger MinWindowWidth="450"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters >
                        <Setter Target="Mymenu.DisplayMode" Value="Overlay" />
                        <Setter Target="Mytop.HorizontalAlignment" Value="Center" />

                        <!--<Setter Target="MySeachBox.Visibility" Value="Collapsed" />-->
                        <Setter Target="waterfallpanel.ColumnNum" Value="3" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="WideLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Mymenu.DisplayMode" Value="Inline" />
                        <Setter Target="Mymenu.IsPaneOpen" Value="True" />
                        <Setter Target="waterfallpanel.ColumnNum" Value="4" />
                        <Setter Target="Mytop.HorizontalAlignment" Value="Left" />
                        <Setter Target="Mytop.Margin" Value="60,0,0,0" />

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
