            </DoubleAnimation>
        </Storyboard>-->

        <!--  汉堡菜单  -->
        <SplitView
            x:Name="Mymenu"
            Grid.RowSpan="2"
            OpenPaneLength="300">
            <SplitView.Pane>
                <Grid Background="#FF0074B6">
                    <Grid.ChildrenTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition FromHorizontalOffset="-200" />
                        </TransitionCollection>
                    </Grid.ChildrenTransitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <ListBox Grid.Row="0" Background="#FF2385BD">
                        <ListBoxItem Height="200">
                            <ListBoxItem.Background>
                                <ImageBrush x:Name="ListBoximg" />
                            </ListBoxItem.Background>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    Text="&#xE10F;" />
                                <TextBlock
                                    Margin="5,0,5,0"
                                    Foreground="White"
                                    FontSize="18"
                                    Text="首页" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    Text="&#xE17D;" />
                                <TextBlock
                                    Margin="5,0,5,0"
                                    Foreground="White"
                                    FontSize="18"
                                    Text="热榜" />
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    Text="&#xE15F;" />
                                <TextBlock
                                    Margin="5,0,5,0"
                                    Foreground="White"
                                    FontSize="18"
                                    Text="评论" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    Text="&#xE734;" />
                                <TextBlock
                                    Margin="5,0,5,0"
                                    Foreground="White"
                                    FontSize="18"
                                    Text="收藏" />
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>

                    <Grid Grid.Row="1" Height="50">
                        <!--<Grid.ChildrenTransitions>
                            <TransitionCollection>
                                <EntranceThemeTransition FromVerticalOffset="100" />
                            </TransitionCollection>
                        </Grid.ChildrenTransitions>-->
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <AppBarButton Width="50">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="20"
                                    Text="&#xE2AF;" />
                            </AppBarButton>
                            <AppBarButton
                                Name="SettingButton"
                                Width="50"
                                Click="Setting_Click">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="20"
                                    Text="&#xE713;" />
                            </AppBarButton>
                        </StackPanel>
                        <AppBarButton Width="50">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="20"
                                Text="&#xE76E;" />
                        </AppBarButton>
                    </Grid>

                </Grid>
            </SplitView.Pane>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    Name="NoNetworld"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="#FFB9B9B9"
                    Text="没网了233333333"
                    Visibility="Collapsed" />

                <Grid Grid.Row="1">
                    <GridView x:Name="Mygridview" SelectionMode="Single">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <local:WaterfallPanel ColumnNum="3" x:Name="waterfallpanel" />
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.Template>
                            <ControlTemplate>
                                <ScrollViewer>
                                    <StackPanel>
                                        <ItemsPresenter />
                                        <Button
                                            Name="Loadingbutton"
                                            Margin="12"
                                            HorizontalAlignment="Center"
                                            Click="Loadingbutton_Click"
                                            Content="加载更多(｡･∀･)ﾉﾞ" />
                                    </StackPanel>
                                </ScrollViewer>
                            </ControlTemplate>
                        </GridView.Template>
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="2">
                                    <!--<Grid.ChildrenTransitions>
                                        <TransitionCollection>
                                            <EntranceThemeTransition />
                                        </TransitionCollection>
                                    </Grid.ChildrenTransitions>-->
                                    <Border
                                        Padding="2"
                                        Background="White"
                                        CornerRadius="0,0,3,3" />
                                    <StackPanel
                                        Name="gridstackpanel"
                                        Margin="1"
                                        Tapped="gridstackpanel_Tapped">
                                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Image
                                                Name="Gridimage"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Source="{Binding preview_url}" />
                                        </Grid>
                                        <Grid Visibility="Collapsed"  HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                                            <!--<Rectangle
                                            Width="{Binding ElementName=gridstackpanel, Path=Width, Mode=TwoWay}"
                                            Height="{Binding ElementName=gridstackpanel, Path=Height, Mode=TwoWay}"
                                            Fill="White"
                                            Opacity="0.3" />-->
                                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom">
                                                <TextBlock
                                                    Name="Imagetext"
                                                    Margin="2,0,0,0"
                                                    Foreground="Black"
                                                    Text="{Binding name}"
                                                    TextWrapping="Wrap" />
                                                <TextBlock
                                                    Name="imageurl"
                                                    Margin="2,1,1,0"
                                                    Foreground="#FF9B9B9B"
                                                    Text="{Binding rating}" />
                                            </StackPanel>
                                        </Grid>

                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>

                <Grid Grid.Row="0">
                    <Rectangle Height="50" Fill="#FF0074B6" />
                    <ProgressBar
                        Name="Networdprogress"
                        Height="50"
                        Visibility="Collapsed"
                        Value="50" />
                    <AppBarButton
                        Name="MenuButton"
                        Width="50"
                        Height="50"
                        Click="MenuButton_Click">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="White"
                            FontFamily="Segoe MDL2 Assets"
                            Text="&#xE76C;" />
                    </AppBarButton>
                    <StackPanel
                        Name="Mytop"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock Foreground="White" Text="首页" />
                    </StackPanel>



                    <AppBarButton
                        Name="SeachButton"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Right"
                        Click="SeachButton_Click">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="White"
                            FontFamily="Segoe MDL2 Assets"
                            Text="&#xE11A;" />
                    </AppBarButton>

                </Grid>


            </Grid>
        </SplitView>
        <Frame Name="MainFrame" />
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="NarrowLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Mymenu.DisplayMode" Value="Overlay" />
                        <Setter Target="Mytop.HorizontalAlignment" Value="Center" />
                        <Setter Target="waterfallpanel.ColumnNum" Value="2" />
                        <!--<Setter Target="SeachButton.Visibility" Value="Visible" />-->
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="450" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Mymenu.DisplayMode" Value="Overlay" />
                        <Setter Target="Mytop.HorizontalAlignment" Value="Center" />

                        <!--<Setter Target="MySeachBox.Visibility" Value="Collapsed" />-->
                        <Setter Target="waterfallpanel.ColumnNum" Value="3" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="WideLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Mymenu.DisplayMode" Value="Inline" />
                        <Setter Target="Mymenu.IsPaneOpen" Value="True" />
                        <Setter Target="waterfallpanel.ColumnNum" Value="4" />
                        <Setter Target="Mytop.HorizontalAlignment" Value="Left" />
                        <Setter Target="Mytop.Margin" Value="60,0,0,0" />

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>

</Page>
