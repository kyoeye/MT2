                        Margin="16,-9,15,9"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Segoe MDL2 Assets"
                        Foreground="Black"
                        Style="{StaticResource TitleButtontext}"
                        Text="&#xE096;" />
                </AppBarButton>
                <AppBarButton
                    Width="50"
                    Height="32"
                    Visibility="Collapsed">
                    <TextBlock
                        Margin="16,-9,15,9"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Segoe MDL2 Assets"
                        Foreground="Black"
                        Style="{StaticResource TitleButtontext}"
                        Text="&#xE1CD;" />
                </AppBarButton>

                <TextBlock Name="betatext" HorizontalAlignment="Center" />
            </StackPanel>
