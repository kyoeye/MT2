<Page
    x:Class="MT2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MT2.pubuliu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#FF0074B6"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="#FFB9B9B9"
            Text="没网了233333333" />

        <Grid Grid.Row="1">
            <ItemsControl x:Name="Mygridview">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <local:WaterfallPanel ColumnNum="3" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.Template>
                    <ControlTemplate>
                        <ScrollViewer>
                            <StackPanel>
                                <ItemsPresenter />
                                <Button
                                    Name="Loadingbutton"
                                    Margin="12"
                                    HorizontalAlignment="Center"
                                    Click="Loadingbutton_Click"
                                    Content="加载更多(｡･∀･)ﾉﾞ" />
                            </StackPanel>
                        </ScrollViewer>
                    </ControlTemplate>
                </ItemsControl.Template>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>

                            <controls:DropShadowPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                BlurRadius="10"
                                OffsetX="0"
                                OffsetY="0"
                                ShadowOpacity="0.45"
                                Color="Black">
                                <Rectangle
                                    Width="{Binding ElementName=gridstackpanel, Path=Width, Mode=TwoWay}"
                                    Height="{Binding ElementName=gridstackpanel, Path=Height, Mode=TwoWay}"
                                    Fill="White"
                                    Opacity="0.3" />
                            </controls:DropShadowPanel>
                            <StackPanel x:Name="gridstackpanel" Margin="3">
                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image
                                        Name="Gridimage"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="{Binding preview_url}" />
                                </Grid>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom">
                                        <TextBlock
                                            Name="Imagetext"
                                            Margin="2,0,0,0"
                                            Foreground="#FF0074B6"
                                            Text="{Binding name}" />
                                        <TextBlock
                                            Name="imageurl"
                                            Margin="2,1,1,0"
                                            Text="{Binding id}" />
                                    </StackPanel>
                                </Grid>

                            </StackPanel>


                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <Grid Grid.Row="0">
            <Rectangle Height="50" Fill="#FF0074B6" />
            <AppBarButton
                Name="MenuButton"
                Width="50"
                Height="50"
                Click="MenuButton_Click">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="White"
                    FontFamily="Segoe MDL2 Assets"
                    Text="&#xE76C;" />
            </AppBarButton>
            <TextBlock
                Name="Mytop"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="White">
                <Run Text="萌豚" />
                <Run
                    Foreground="White"
                    FontWeight="Bold"
                    Text="S" />
            </TextBlock>
            <AppBarButton
                Name="SeachButton"
                Width="50"
                Height="50"
                HorizontalAlignment="Right">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="White"
                    FontFamily="Segoe MDL2 Assets"
                    Text="&#xE11A;" />
            </AppBarButton>

            <AutoSuggestBox
                Name="MySeachBox"
                Width="330"
                Margin="10,0,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                PlaceholderText="搜索一下，或许会有有趣的事情发生"
                QueryIcon="Find"
                Visibility="Visible" />
        </Grid>

        <!--<GridView Grid.Row="1">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        Width="200"
                        Height="275"
                        Margin="10">
                        <Image Name="HomeImage" />
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>-->
        <!--  汉堡菜单  -->
        <SplitView
            Name="Mymenu"
            Grid.RowSpan="2"
            OpenPaneLength="300">
            <SplitView.Pane>
                <Grid Background="#FF0074B6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <ListBox Grid.Row="0" Background="#FF2385BD">
                        <ListBoxItem Height="200">
                            <ListBoxItem.Background>
                                <ImageBrush x:Name="ListBoximg" />
                            </ListBoxItem.Background>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    Text="&#xE10F;" />
                                <TextBlock
                                    Margin="5,0,5,0"
                                    Foreground="White"
                                    FontSize="18"
                                    Text="首页" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    Text="&#xE15F;" />
                                <TextBlock
                                    Margin="5,0,5,0"
                                    Foreground="White"
                                    FontSize="18"
                                    Text="评论" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    Text="&#xE734;" />
                                <TextBlock
                                    Margin="5,0,5,0"
                                    Foreground="White"
                                    FontSize="18"
                                    Text="收藏" />
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>

                    <Grid Grid.Row="1" Height="50">
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <AppBarButton Width="50">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="20"
                                    Text="&#xE2AF;" />
                            </AppBarButton>
                            <AppBarButton
                                Name="SettingButton"
                                Width="50"
                                Click="SettingButton_Click">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="20"
                                    Text="&#xE713;" />
                            </AppBarButton>
                        </StackPanel>
                        <AppBarButton Width="50">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="20"
                                Text="&#xE76E;" />
                        </AppBarButton>
                    </Grid>

                </Grid>
            </SplitView.Pane>
        </SplitView>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="NarrowLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Mytop.HorizontalAlignment" Value="Center" />
                        <Setter Target="MySeachBox.Visibility" Value="Collapsed" />
                        <Setter Target="SeachButton.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="WideLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Mytop.HorizontalAlignment" Value="Left" />
                        <Setter Target="Mytop.Margin" Value="60,0,0,0" />
                        <Setter Target="MySeachBox.Visibility" Value="Visible" />
                        <Setter Target="SeachButton.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
