<Page
    x:Class="MT2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:data="using:MT2.CS"
    xmlns:local="using:MT2.pubuliu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#FF0074B6"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    RequestedTheme="Light"
    mc:Ignorable="d">
    <SplitView Name="Mymenu" OpenPaneLength="250">
        <SplitView.Pane>
            <Grid HorizontalAlignment="Left">
                <ListBox SelectionChanged="MenuListboxitem_SelectionChanged" HorizontalAlignment="Left">
                    <ListBoxItem
                        Height="250"
                        Padding="0"
                        Background="#FFD6D6D6">
                        <Grid Width="250" Height="250">
                            <Image Stretch="UniformToFill"  Source="{Binding ElementName=HomeHot, Path=Source ,Mode=TwoWay }" />
                            <AppBarButton
                                Width="50"
                                Height="50"
                                HorizontalAlignment="Left"
                                Click="MenuButton_Click">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    Text="&#xE09A;" />
                            </AppBarButton>
                        </Grid>
                    </ListBoxItem>
                    <ListBoxItem Name="homepage">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="18"
                                Text="&#xE10F;" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="18"
                                Text="首页" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Name="hotitem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="18"
                                Text="&#xE8E1;" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="18"
                                Text="热榜" />
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
                <Grid Height="50" VerticalAlignment="Bottom">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <AppBarButton
                        Name="SettingButton"
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Click="Setting_Click">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="18"
                            Text="&#xE713;" />
                    </AppBarButton>
                </Grid>
            </Grid>

        </SplitView.Pane>
        <Grid>
            <Grid.Background>
                <SolidColorBrush Color="White" />
            </Grid.Background>

            <ScrollViewer>
                <StackPanel>
                    <Grid animations:ParallaxService.VerticalMultiplier="-0.8" Height="400" Background="#FFBFBFBF">
                        <Image Stretch="UniformToFill"  Height="410"  Name="HomeHot" />
                        <TextBlock
                            Margin="10"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            FontSize="30"
                            FontWeight="Bold"
                            Foreground="#FF606060"
                           
                            Text="TOP1" />
                    </Grid>
                    <Grid Margin="5" Background="White">
                        <Grid.Resources >
                            <DataTemplate x:Key="GridviewTemplete">
                                <Grid
                                        Name="Picturegrid"
                                        Tapped="Picturegrid_Tapped" 
                                        Width="145"
                                        Height="200"
                                        Margin="0.5"
                                        Background="#FFD1D1D1" HorizontalAlignment="Center">
                                    <Image Stretch="UniformToFill"  Height="205" Source="{Binding preview_url}" HorizontalAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </Grid.Resources>
                        
                            <controls:AdaptiveGridView x:Name="Pictureada" animations:ReorderGridAnimation.Duration="450" OneRowModeEnabled="False" ItemHeight="200" DesiredWidth="140"  SelectionMode="Single"
                                   IsItemClickEnabled="True"
                                   ItemTemplate="{StaticResource GridviewTemplete}"  />

 

                        <!--<GridView  animations:ReorderGridAnimation.Duration="450"  Name="Pictureada" HorizontalAlignment="Stretch"  VerticalAlignment="Top">
                            <GridView.ItemTemplate>
                                <DataTemplate  >
                                    <Grid
                                        Name="Picturegrid"
                                        Tapped="Picturegrid_Tapped" 
                                        Width="130"
                                        Height="200"
                                        Margin="0.5"
                                        Background="#FFD1D1D1" HorizontalAlignment="Center">
                                        <Image Stretch="UniformToFill"  Height="205" Source="{Binding preview_url}" HorizontalAlignment="Center" />
                                    </Grid>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>-->
                    </Grid>
                </StackPanel>
            </ScrollViewer>
            <Grid Height="50" VerticalAlignment="Top">
                <Border Name="TopBorder" Background="{ThemeResource AppBarBackground}" />
                <StackPanel Orientation="Horizontal" >
                    <AppBarButton
                    Width="50"
                    Height="50"
                    Click="MenuButton_Click">
                        <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Segoe MDL2 Assets"
                        Text="&#xE700;" />
                    </AppBarButton>
                    <TextBlock Text="首页"  Margin="5" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </StackPanel>
                <AppBarButton Name="Searchbutton" Click="Searchbutton_Click" VerticalAlignment="Center" HorizontalAlignment="Right" >
                    <TextBlock Text="&#xE1A3;" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe MDL2 Assets"/>
                </AppBarButton>
            </Grid>

            <!--<SplitView
            IsPaneOpen="False"
            Name="Mymenu"
            DisplayMode="Overlay"
            Width="250"
            HorizontalAlignment="Left">
            </SplitView>-->
        </Grid>

    </SplitView>
</Page>
