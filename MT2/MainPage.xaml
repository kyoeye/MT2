        <!--  子框架退出动画  -->
        <!--<Storyboard x:Name="childrenOutStoryboard"
                    x:FieldModifier="public"
                    Completed="childrenOutStoryboard_Completed">
            <DoubleAnimation x:Name="childrenOutDA"
                             Storyboard.TargetName="childrenFrameCompositeTransform"
