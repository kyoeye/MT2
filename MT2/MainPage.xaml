<Page
    x:Class="MT2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MT2.pubuliu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#FF0074B6"
    mc:Ignorable="d">

    <Grid Background="#FFE4E4E4">
        <!--  汉堡菜单  -->
        <SplitView
            x:Name="Mymenu"
            Grid.RowSpan="2"
            OpenPaneLength="250">
            <SplitView.Pane>
                <Grid Background="#FF0074B6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <ListBox
                        Name="MenuListboxitem"
                        Grid.Row="0"
                        Background="White"
                        SelectionChanged="MenuListboxitem_SelectionChanged">
                        <ListBoxItem Height="200">
                            <ListBoxItem.Background>
                                <ImageBrush x:Name="ListBoximg" />
                            </ListBoxItem.Background>
                        </ListBoxItem>
                        <ListBoxItem Name="homepage">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    Foreground="Black"
                                    Text="&#xE10F;" />
                                <TextBlock
                                    Margin="5,0,5,0"
                                    FontSize="18"
                                    Foreground="Black"
                                    Text="首页" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Name="hotitem">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    Foreground="Black"
                                    Text="&#xE17D;" />
                                <TextBlock
                                    Margin="5,0,5,0"
                                    FontSize="18"
                                    Foreground="Black"
                                    Text="热榜" />
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    Foreground="Black"
                                    Text="&#xE15F;" />
                                <TextBlock
                                    Margin="5,0,5,0"
                                    FontSize="18"
                                    Foreground="Black"
                                    Text="评论" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    Foreground="Black"
                                    Text="&#xE734;" />
                                <TextBlock
                                    Margin="5,0,5,0"
                                    FontSize="18"
                                    Foreground="Black"
                                    Text="收藏" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    Foreground="Black"
                                    Text="&#xE896;" />
                                <TextBlock
                                    Margin="5,0,5,0"
                                    FontSize="18"
                                    Foreground="Black"
                                    Text="下载" />
                            </StackPanel>
                        </ListBoxItem>

                    </ListBox>

                    <Grid Grid.Row="1" Height="50">
                        <!--<Grid.ChildrenTransitions>
                            <TransitionCollection>
                                <EntranceThemeTransition FromVerticalOffset="100" />
                            </TransitionCollection>
                        </Grid.ChildrenTransitions>-->
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <AppBarButton Width="50">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="20"
                                    Foreground="White"
                                    Text="&#xE2AF;" />
                            </AppBarButton>
                            <AppBarButton
                                Name="SettingButton"
                                Width="50"
                                Click="Setting_Click">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="20"
                                    Foreground="White"
                                    Text="&#xE713;" />
                            </AppBarButton>
                        </StackPanel>
                        <AppBarButton Width="50">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="20"
                                Foreground="White"
                                Text="&#xE76E;" />
                        </AppBarButton>
                    </Grid>

                </Grid>
            </SplitView.Pane>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    Name="NoNetworld"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="#FFB9B9B9"
                    Text="没网了233333333"
                    Visibility="Collapsed" />

                <Grid Grid.Row="1">
                    <GridView x:Name="Mygridview" SelectionMode="Single">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <local:WaterfallPanel x:Name="waterfallpanel" ColumnNum="3" />
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.Template>
                            <ControlTemplate>
                                <ScrollViewer>
                                    <StackPanel>
                                        <ItemsPresenter />
                                        <Button
                                            x:Name="appbarbutton"
                                            Width="100"
                                            Margin="10"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            Background="{x:Null}"
                                            BorderBrush="{x:Null}"
                                            Click="Loadingbutton_Click"
                                            Visibility="Visible">
                                            <Button.Content>
                                                <Grid>
                                                    <Viewbox>
                                                        <Grid>
                                                            <Rectangle
                                                                Name="Buttonrectangle"
                                                                Width="300"
                                                                Height="120"
                                                                HorizontalAlignment="Center"
                                                                RadiusX="40"
                                                                RadiusY="40"
                                                                Stroke="#FF2291DE"
                                                                StrokeThickness="2">
                                                                <Rectangle.Fill>
                                                                    <SolidColorBrush Opacity="0.699999988079071" Color="#FF383838" />
                                                                </Rectangle.Fill>
                                                            </Rectangle>
                                                            <TextBlock
                                                                Name="loadingbuttontext"
                                                                Margin="40"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                FontSize="50"
                                                                Foreground="#FFCFCFCF"
                                                                Text="加载更多" />
                                                        </Grid>
                                                    </Viewbox>
                                                </Grid>
                                            </Button.Content>
                                        </Button>
                                        <!--<Button
                                            Name="Loadingbutton"
                                            Margin="12"
                                            HorizontalAlignment="Center"
                                            Click="Loadingbutton_Click"
                                            Content="加载更多(｡･∀･)ﾉﾞ" />-->
                                    </StackPanel>
                                </ScrollViewer>
                            </ControlTemplate>
                        </GridView.Template>
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="2">
                                    <StackPanel
                                        Name="gridstackpanel"
                                        Margin="1"
                                        Tapped="gridstackpanel_Tapped">
                                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Grid.ChildrenTransitions>
                                                <TransitionCollection>
                                                    <EntranceThemeTransition />
                                                </TransitionCollection>
                                            </Grid.ChildrenTransitions>
                                            <Image
                                                Name="Gridimage"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Source="{Binding preview_url}" />
                                        </Grid>
                                        <Grid
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Bottom"
                                            Visibility="Collapsed">
                                            <!--<Rectangle
                                            Width="{Binding ElementName=gridstackpanel, Path=Width, Mode=TwoWay}"
                                            Height="{Binding ElementName=gridstackpanel, Path=Height, Mode=TwoWay}"
                                            Fill="White"
                                            Opacity="0.3" />-->
                                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom">
                                                <TextBlock
                                                    Name="Imagetext"
                                                    Margin="2,0,0,0"
                                                    Foreground="Black"
                                                    Text="{Binding name}"
                                                    TextWrapping="Wrap" />
                                                <TextBlock
                                                    Name="imageurl"
                                                    Margin="2,1,1,0"
                                                    Foreground="#FF9B9B9B"
                                                    Text="{Binding rating}" />
                                            </StackPanel>
                                        </Grid>

                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>

                <Grid Grid.Row="0">
                    <Rectangle Height="50" Fill="#FF0074B6" />
                    <ProgressBar
                        Name="Networdprogress"
                        Height="50"
                        Visibility="Collapsed"
                        Value="50" />
                    <AppBarButton
                        Name="MenuButton"
                        Width="50"
                        Height="50"
                        Click="MenuButton_Click">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            Foreground="White"
                            Text="&#xE76C;" />
                    </AppBarButton>
                    <StackPanel
                        Name="Mytop"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock Foreground="White" Text="首页" />
                    </StackPanel>

                    <AppBarButton
                        Name="SeachButton"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Right"
                        Click="SeachButton_Click">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            Foreground="White"
                            Text="&#xE11A;" />
                    </AppBarButton>
                </Grid>

                <Frame Name="MainFrame" Grid.RowSpan="2" />
                <ProgressRing
                    Name="Myprogressring"
                    Grid.Row="1"
                    Width=" 60"
                    Height="60"
                    IsActive="True" />
            </Grid>

        </SplitView>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="NarrowLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Mymenu.DisplayMode" Value="Overlay" />
                        <Setter Target="Mytop.HorizontalAlignment" Value="Center" />
                        <Setter Target="waterfallpanel.ColumnNum" Value="2" />
                        <!--<Setter Target="SeachButton.Visibility" Value="Visible" />-->
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="450" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Mymenu.DisplayMode" Value="Overlay" />
                        <Setter Target="Mytop.HorizontalAlignment" Value="Center" />

                        <!--<Setter Target="MySeachBox.Visibility" Value="Collapsed" />-->
                        <Setter Target="waterfallpanel.ColumnNum" Value="3" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="WideLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Mymenu.DisplayMode" Value="Inline" />
                        <Setter Target="Mymenu.IsPaneOpen" Value="True" />
                        <Setter Target="waterfallpanel.ColumnNum" Value="4" />
                        <Setter Target="Mytop.HorizontalAlignment" Value="Left" />
                        <Setter Target="Mytop.Margin" Value="60,0,0,0" />

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>

</Page>
