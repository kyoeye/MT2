                <TextBlock
                    Name="AppName"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Style="{StaticResource TextblockForeground}"
                    Text="MTACG" />

            </Grid>
            <StackPanel Orientation="Horizontal">
                <AppBarButton
                    Name="GobackButton"
                    Width="50"
                    Height="32"
