<Page
    x:Class="MT2.page.DownloadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MT2.page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#FF0074B6"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Pivot Name="pivot">
            <PivotItem Margin="-0,0,-0,0" Header="下载列表">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Margin="4" Content="全部暂停" />
                        <Button Margin="4" Content="全部取消" />
                    </StackPanel>
                    <ListView>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <ProgressBar Name="Downloadprogress" Height="100" />
                                    <TextBlock
                                        Name="imgid"
                                        HorizontalAlignment="Left"
                                        FontSize="30" />
                                    <StackPanel HorizontalAlignment="Right">
                                        <AppBarButton
                                            Name="Zanting"
                                            Width="50"
                                            Height="100">
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE769;" />
                                        </AppBarButton>
                                        <AppBarButton
                                            Name="Quxiao"
                                            Width="50"
                                            Height="100">
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE106;" />
                                        </AppBarButton>

                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </PivotItem>
            <PivotItem Margin="0" Header="下载历史">
                <TextBlock Text="1" />
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
