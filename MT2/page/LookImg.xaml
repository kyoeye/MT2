<Page
    x:Class="MT2.page.LookImg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MT2.page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Black"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{ThemeResource SystemChromeHighColor}" />
        </Grid.Background>
        <ScrollViewer>
            <StackPanel>
                <Grid Name="betaborder" Background="Black">
                    <Image Name="SeeImage" Stretch="Uniform" />


                    <Button
                        Name="AppBarButton"
                        Width="100"
                        Margin="10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}">
                        <Button.Content>
                            <Grid>
                                <Viewbox>
                                    <Grid>
                                        <Rectangle
                                            Width="150"
                                            Height="90"
                                            HorizontalAlignment="Center"
                                            Stroke="#FF2291DE"
                                            StrokeThickness="2"
                                            RadiusX="40"
                                            RadiusY="40">
                                            <Rectangle.Fill>
                                                <SolidColorBrush Opacity="0.699999988079071" Color="#FF383838" />
                                            </Rectangle.Fill>
                                        </Rectangle>
                                        <TextBlock
                                            Margin="70,25"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="#FFCFCFCF"
                                            FontFamily="Segoe MDL2 Assets"
                                            FontSize="40"
                                            Text="&#xE8A3;" />
                                    </Grid>
                                </Viewbox>
                            </Grid>
                        </Button.Content>
                    </Button>



                </Grid>
                <Grid Height="100" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />

                    </Grid.ColumnDefinitions>
                    <Viewbox Grid.Column="0">
                        <Button
                            Name="DownloadButton"
                            Click="DownloadButton_Click"
                            Grid.Column="0"
                            Width="100"
                            Margin="10"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}">
                            <Button.Content>
                                <Grid>
                                    <Viewbox>
                                        <Grid>
                                            <Rectangle
                                                Width="150"
                                                Height="90"
                                                HorizontalAlignment="Center"
                                                Stroke="#FF2291DE"
                                                StrokeThickness="2"
                                                RadiusX="40"
                                                RadiusY="40">
                                                <Rectangle.Fill>
                                                    <SolidColorBrush Opacity="0.699999988079071" Color="#FFDEDEDE" />
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock
                                                Margin="70,25"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="Black"
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="40"
                                                Text="&#xE118;" />
                                        </Grid>
                                    </Viewbox>
                                </Grid>
                            </Button.Content>
                        </Button>
                    </Viewbox>
                    <Viewbox Grid.Column="1">
                        <Button
                            Name="StarButton"
                            Width="100"
                            Margin="10"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}">
                            <Button.Content>
                                <Grid>
                                    <Viewbox>
                                        <Grid>
                                            <Rectangle
                                                Width="150"
                                                Height="90"
                                                HorizontalAlignment="Center"
                                                Stroke="#FF2291DE"
                                                StrokeThickness="2"
                                                RadiusX="40"
                                                RadiusY="40">
                                                <Rectangle.Fill>
                                                    <SolidColorBrush Opacity="0.699999988079071" Color="#FF4F4F4F" />
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock
                                                Margin="70,25"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="#FFCFCFCF"
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="40"
                                                Text="&#xE113;" />
                                        </Grid>
                                    </Viewbox>
                                </Grid>
                            </Button.Content>
                        </Button>

                    </Viewbox>
                    <Viewbox Grid.Column="2">
                        <Button
                            Name="ShareButton"
                            Width="100"
                            Margin="10"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}">
                            <Button.Content>
                                <Grid>
                                    <Viewbox>
                                        <Grid>
                                            <Rectangle
                                                Width="150"
                                                Height="90"
                                                HorizontalAlignment="Center"
                                                Stroke="#FF2291DE"
                                                StrokeThickness="2"
                                                RadiusX="40"
                                                RadiusY="40">
                                                <Rectangle.Fill>
                                                    <SolidColorBrush Opacity="0.699999988079071" Color="#FF4F4F4F" />
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock
                                                Margin="70,25"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="#FFCFCFCF"
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="40"
                                                Text="&#xE72D;" />
                                        </Grid>
                                    </Viewbox>
                                </Grid>
                            </Button.Content>
                        </Button>

                    </Viewbox>
                    <Viewbox Grid.Column="3">
                        <Button
                            Name="shezhibutton"
                            Width="100"
                            Margin="10"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}">
                            <Button.Content>
                                <Grid>
                                    <Viewbox>
                                        <Grid>
                                            <Rectangle
                                                Width="150"
                                                Height="90"
                                                HorizontalAlignment="Center"
                                                Stroke="#FF2291DE"
                                                StrokeThickness="2"
                                                RadiusX="40"
                                                RadiusY="40">
                                                <Rectangle.Fill>
                                                    <SolidColorBrush Opacity="0.699999988079071" Color="#FF4F4F4F" />
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock
                                                Margin="70,25"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="#FFCFCFCF"
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="40"
                                                Text="&#xE10C;" />
                                        </Grid>
                                    </Viewbox>
                                </Grid>
                            </Button.Content>
                        </Button>

                    </Viewbox>

                </Grid>
                <Grid>
                    <Border
                        Margin="10"
                        Background="#FFE4E4E4"
                        BorderBrush="#FF2291DE"
                        BorderThickness="2"
                        CornerRadius="2">
                        <StackPanel>
                            <TextBlock
                                Name="betatext"
                                Margin="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#FF4B4B4B"
                                Text="标签" />
                            <!--<GridView >

                            </GridView>-->
                        </StackPanel>

                    </Border>
                </Grid>
                <Button Name="textbutoon" Click="textbutoon_Click"  Content="哇哈哈哈哈" />
                <TextBlock Name="textblock"/>
            </StackPanel>

        </ScrollViewer>
    </Grid>
</Page>
