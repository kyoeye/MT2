<Page
    x:Class="MT2.page.Setting2Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:MT2.CS"
    xmlns:local="using:MT2.page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   
    mc:Ignorable="d">
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition />
        </TransitionCollection>
    </Page.Transitions>
    <Page.Resources>
        <Storyboard x:Name="OpenGrid">
            <DoubleAnimation
                EnableDependentAnimation="True"
                Storyboard.TargetName="TopGrid"
                Storyboard.TargetProperty="Height"
                From="0"
                To="250"
                Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Name="OpenGridEnd">
            <DoubleAnimation
                EnableDependentAnimation="True"
                Storyboard.TargetName="TopGrid"
                Storyboard.TargetProperty="Height"
                From="250"
                To="0"
                Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Name="MyTitleBarVB">
            <Grid
                Name="MyTitleBar"
                Grid.Row="0"
                Height="32"
                />
            <Grid Height="32" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal">
                    <AppBarButton
                        Name="GobackButton"
                        Width="50"
                        Height="32"
                        Click="SettingGoback_Click"
                        Visibility="Visible">
                        <TextBlock
                            Margin="16,-9,15,9"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            Foreground="Black"
                            Style="{StaticResource TitleButtontext}"
                            Text="&#xE096;" />
                    </AppBarButton>
                    <TextBlock
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="13"
                        Style="{StaticResource TextblockForeground}" />
                </StackPanel>


            </Grid>
        </Grid>
        <ScrollViewer Name="myScrollviewer" Grid.Row="1">
            <StackPanel>

                <Grid
                    x:Name="TopGrid"
                    Height="250"
                   >
                  
                    <!--<Image Name="Logobackground"  Source="{ x:Bind Mode=TwoWay ,Path=mainpage.Homehoturl }" />-->
                    <StackPanel
                        Height="50"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                        <AppBarButton
                            Name="Setting_setting"
                            Width="50"
                            Click="Setting_setting_Click">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="20"
                                Text="&#xE713;" />
                        </AppBarButton>

                        <TextBlock
                            Name="Setting_Title"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Text="设置" />
                    </StackPanel>
                    <TextBlock
                        Margin="15"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Text="{Binding ElementName=myScrollviewer, Path=VerticalOffset, Mode=TwoWay}"
                        Visibility="Collapsed" />
                    <Image
                        Name="LUXUN"
                        HorizontalAlignment="Center"
                        Stretch="UniformToFill"
                        Visibility="Collapsed" />
                    <HyperlinkButton
                        Name="fuckyou"
                        HorizontalAlignment="Center"
                        Click="fuckyou_Click"
                        Content="你就这点力气吗"
                        Visibility="Collapsed" />
                    <Image
                        Name="logo"
                        Width="80"
                        Height="80"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        ManipulationDelta="Image_ManipulationDelta"
                        ManipulationMode="All"
                        Source="ms-appx:///Assets/Square44x44Logo.altform-unplated_targetsize-256.png" />

                    <StackPanel Margin="10" VerticalAlignment="Bottom">
                        <TextBlock
                            Name="MoeTon_name"
                            HorizontalAlignment="Center"
                            Foreground="Black"
                            IsTextSelectionEnabled="True"
                            Text="萌豚二号机-咕咕咕" />
                        <Button
                            Name="Abutopagebutton"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="{x:Null}"
                            Click="Abutopagebutton_Click">
                            <TextBlock
                                Name="about_text"
                                Margin="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="关于MoeTon" />
                        </Button>
                    </StackPanel>
                </Grid>
                <StackPanel>
                    <StackPanel Margin="4" Background="{ThemeResource AppBarBorderThemeBrush}">
                        <TextBlock
                            Name="Language_Title"
                            Margin="10"
                            HorizontalAlignment="left"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="#ff4b4b4b"
                            Text="语言" />
                        <StackPanel BorderBrush="#FFD7D7D7" BorderThickness="0,2,0,0">
                            <GridView
                                Name="LanguageSelect"
                                Margin="15,5,15,10"
                                Padding="0"
                                IsEnabled="True"
                                ItemsSource="{x:Bind Languagelist}"
                                SelectionChanged="LanguageSelect_SelectionChanged"
                                UseLayoutRounding="False">
                                <GridView.ItemTemplate>
                                    <DataTemplate x:DataType="data:LanguageMode">
                                        <StackPanel>
                                            <Image
                                                Width="50"
                                                Height="30"
                                                Margin="3"
                                                Source="{x:Bind LanguageIMG_Uri}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                            <TextBlock
                                Name="Translate_By"
                                Margin="15,0,15,10"
                                Foreground="Gray"
                                Text="翻译提供：Watson花生酱" />
                        </StackPanel>

                    </StackPanel>

                    <!--<Grid
                        Margin="4"
                        Background="{ThemeResource AppBarBorderThemeBrush}"
                        Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />

                        </Grid.RowDefinitions>
                        <TextBlock
                            Margin="10"
                            HorizontalAlignment="left"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="#ff4b4b4b"
